<div class="container">
	<div class="row">
		<div class="col-md-12 text-center">
			<h1> Eat-Da-Real-Burger! </h1>
			<br>
			<div class="emoji">🍔</div>
			<br>
		</div>
		<div class="col-md-6 text-center">
			<div class="row">
			  {{#each burger_data}}
			  	{{#unless this.devoured}}
				<div class="col-md-9 ">
					<pre>{{this.id}}. {{this.burger_name}}
					</pre>
				  		
				</div>
				<div class="col-md-3 text-center">
					<form class="devour-form button-size">
						<input type="hidden" class="burger_id " type="text" value={{this.id}}><br>
						<button type="submit" class="btn btn-success">Devour it!</button>
					</form>
				</div>
				{{/unless}}
			  {{/each}}
			</div>
		</div>
		<div class="col-md-6 text-center ">
			  {{#each burger_data}}
			  	{{#if this.devoured}}
			  		<input class="form-control devoured" type="text" placeholder="{{this.id}} . {{this.burger_name}}">
				{{/if}}
			  {{/each}}
		</div>
	</div>
</div>


<div class="container">
	<div class="row">
		<div class="col-md-12 text-center">
			<form action="/burgers/create" method="POST">
				<input type="text" class="form-control new-burger" name="burger_name" value="" >
				<button type="submit" class="btn btn-success btn-primary ">
					Submit your own Burger! 👆 </button>
			</form>
		
		</div>
	</div>
</div>